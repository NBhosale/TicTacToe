<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.nero.tictactoe">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".PlayScreen"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".PlayModeActivity"
            android:configChanges="orientation" />
        <activity
            android:name=".AboutScreen"
            android:theme="@style/AppTheme.CutomThemePopUp" />
        <activity
            android:name=".UserInfoActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".Stats"
            android:theme="@style/AppTheme.CutomThemePopUp"></activity>
    </application>

</manifest>